<p id="notice"><%= notice %></p>

<h1>Listing Address Books</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @address_books.each do |address_book| %>
      <tr>
        <td><%= address_book.name %></td>
        <td><%= address_book.email %></td>
        <td><%= address_book.telephone %></td>
        <td  type="button" class="btn btn-info"><%= link_to 'Show', address_book %></td>
        <td  type="button" class="btn btn-info"><%= link_to 'Edit', edit_address_book_path(address_book) %></td>
        <td type="button" class="btn btn-danger"><%= link_to 'Destroy', address_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

